<Window x:Class="VerstkaSait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerstkaSait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid>
            <!-- Сетка 5 на 5 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="200"></RowDefinition>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!-- The background -->
            <Image Source="/Img/4.jpg"
                Grid.RowSpan="3"
                Grid.ColumnSpan="5" 
                        
                />
            <!-- menu buttons -->
            <StackPanel Grid.Column="2" >
                <Button Background="Transparent">


                    <TextBlock
                            FontSize="20px"
                            FontFamily="Calibri"
                            FontWeight="Black"
                            Foreground="White" 
                            Background="Orange" 
                            HorizontalAlignment="Left"
                            
                            > HEAVY <LineBreak/> INDUSTRY <LineBreak/> A SMALL SCALE PROJECT
                    </TextBlock> 
                </Button>
            </StackPanel>

            <!-- menu buttons  POPULAR MACHINERY CONTACT-->
            <StackPanel Grid.Row="0" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Width="400"
                        Margin="27 0 0 0"
                        >

                <Button Background="Transparent" 
                        FontFamily="Calibri"
                        Foreground="White"
                        FontSize="14px" 
                        Padding="20px" 
                        Content="POPULAR" 
                        FontWeight="Normal"/>


                <Button Background="Transparent" 
                        FontFamily="Calibri"
                        Foreground="White"
                        FontSize="14px" 
                        Padding="20px" 
                        Content="MACHINERY" 
                        FontWeight="Normal"/>

                <Button Background="Transparent" 
                        FontFamily="Calibri"
                        Foreground="White"
                        FontSize="14px" 
                        Padding="20px" 
                        Content="CONTACT" 
                        FontWeight="Normal"/>

            </StackPanel>

            <!-- button  TOP INDUSTRIES -->
            <StackPanel Grid.Row="0" 
                        Grid.Column="5"
                        Width="180"
                        Height="90" 
                        >
                
                <Button Content="TOP INDUSTRIES"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        FontFamily="Calibri"
                        Foreground="White"
                        FontSize="14px"
                        Padding="40"
                 />
            </StackPanel>


            <!-- textblock  EXPERIENCE & CRAFTSMANSHIP for centre -->
            <StackPanel Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="5"
                        HorizontalAlignment="Center"
                >
                
                <TextBlock Text="EXPERIENCE AND CRAFTSMANSHIP"
                           VerticalAlignment="Center"

                           Foreground="Orange"
                           FontSize="45px"
                    />

            </StackPanel>
            
        </Grid>
    </ScrollViewer>
</Window>

